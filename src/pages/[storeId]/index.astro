---
import LayoutBase from "@layouts/base.astro";
import LayoutNavbar from "@layouts/navbar.astro";

import ModalDeleteStore from "@components/modals/delete-store.astro";
import ModalEditStore from "@components/modals/edit-store.astro";

const { storeId } = Astro.params;
---

<LayoutBase>
    <LayoutNavbar />
    <button
        type="button"
        data-modal-target={`delete-store-moda-${storeId}`}
        data-modal-toggle={`delete-store-moda-${storeId}`}
        data-delete-store
        class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900"
    >
        Eliminar tienda
    </button>
    <!-- <script define:vars={{ storeId }}>
        const deleteBTN = document.querySelector("[data-delete-store]");
        deleteBTN.addEventListener("click", async () => {
            const formData = new FormData();
            formData.append("id", storeId);
            await fetch("/api/stores", {
                method: "DELETE",
                body: formData,
            });
            window.location.href = "dashboard";
        });
    </script> -->
    <ModalDeleteStore />

    <button
        type="button"
        class="focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800"
        data-modal-target={`edit-store-moda-${storeId}`}
        data-modal-toggle={`edit-store-moda-${storeId}`}>Editar tienda</button
    >
    <ModalEditStore />
</LayoutBase>
